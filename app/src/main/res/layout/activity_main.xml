<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="52dp"
            android:text="UPDATE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="LOADING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="12dp"/>
    <Button
            android:text="EMPTY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/empty"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            app:layout_constraintBottom_toTopOf="@+id/loading" android:layout_marginBottom="8dp"/>
    <Button
            android:text="FAILED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/failed"
            app:layout_constraintBottom_toTopOf="@+id/empty" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginBottom="8dp"/>
    <Button
            android:text="FOOTER LOADING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/failed" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginBottom="8dp" android:id="@+id/footer_loading"/>

    <Button
            android:text="FOOTER NO MORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/footer_no_more"
            app:layout_constraintBottom_toTopOf="@+id/footer_loading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="8dp"/>

    <Button
            android:text="FOOTER FAILED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/footer_failed"
            app:layout_constraintBottom_toTopOf="@+id/footer_no_more"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="28dp"/>

    <Button
            android:text="FOOTER SUCCESS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/footer_success"
            app:layout_constraintBottom_toTopOf="@+id/footer_failed"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>